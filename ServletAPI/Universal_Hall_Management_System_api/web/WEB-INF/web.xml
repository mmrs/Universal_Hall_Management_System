<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>logInAuthentication</servlet-name>
        <servlet-class>logInAuthentication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckHallStatus</servlet-name>
        <servlet-class>CheckHallStatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePassword</servlet-name>
        <servlet-class>ChangePassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logInAuthentication</servlet-name>
        <url-pattern>/logInAuthentication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckHallStatus</servlet-name>
        <url-pattern>/CheckHallStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePassword</servlet-name>
        <url-pattern>/ChangePassword</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
